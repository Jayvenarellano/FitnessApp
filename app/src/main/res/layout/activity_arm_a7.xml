<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_arm_a7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#073963"

    tools:context="com.example.user.fitnessapp.MenTimer.ArmTimer.ArmMenu.A.ArmA7">


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <android.support.v7.widget.CardView
            android:id="@+id/Armcon7"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_marginTop="250dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="CONTINUE"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Continue1" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/Armquit7"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:layout_below="@+id/Armcon7"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="QUIT"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Continue2" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</RelativeLayout>
