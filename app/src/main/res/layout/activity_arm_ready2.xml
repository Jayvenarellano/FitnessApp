<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:timer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_arm_ready2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11000000"
    tools:context="com.example.user.fitnessapp.MenTimer.ArmTimer.Ready.ArmReady2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/backarm2"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back2" />



        <TextView
            android:id="@+id/areyou1"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARE YOU READY?"
            android:layout_marginTop="50dp"/>

        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/areyou1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INCLINE PUSH-UP"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="140dp"
            android:background="#FFF" />


        <TextView
            android:id="@+id/Armview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ArmTimer2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text=""
            android:textColor="#000"
            android:textSize="35dp"
            android:textStyle="bold" />


        <io.github.krtkush.lineartimer.LinearTimerView
            android:id="@+id/ArmTimer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            timer:initialColor="@color/colorPrimary"
            timer:progressColor="@color/colorInitial"
            timer:radius="25dp"
            timer:startingPoint="270"
            timer:strokeWidth="7dp" />


        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/info"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/arminfo2" />

        <TextView
            android:text="SKIP"
            android:id="@+id/armskip2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/incline"
            android:layout_alignTop="@+id/gif"
            android:layout_centerHorizontal="true"
            android:id="@+id/gifImageView2" />
    </RelativeLayout>


</RelativeLayout>
