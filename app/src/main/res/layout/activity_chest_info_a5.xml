<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chest_info_a5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.user.fitnessapp.MenTimer.ChestTimer.ChestInfo.A1.ChestInfoA5">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFF" />

        <TextView
            android:id="@+id/gif2"
            android:layout_below="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFF" />



        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/counterclockwise"
            android:layout_alignTop="@+id/gif"
            android:layout_centerHorizontal="true"
            android:id="@+id/gifImageView" />


        <TextView
            android:text="ARM CIRCLE COUNTER CLOCKWISE"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/jumpingpopupa1"
            android:layout_alignTop="@+id/gif2"
            android:layout_alignStart="@+id/gif2"
            android:layout_marginStart="10dp" />

        <TextView
            android:text="Stand on the floor with your arms extended straight out to the sides at shoulder height.

Move your arms counterclockwise in circles fast.

Try to do it as fast as you can.

Itâ€™s a great exercise for the deltoid muscle."
            android:layout_width="300dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/jumpingpopupa1"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/gif2" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/close1"
            android:layout_below="@+id/gif2"
            android:id="@+id/Closechests5" />

    </RelativeLayout>
</RelativeLayout>
