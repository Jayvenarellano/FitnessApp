<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:timer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_abs_start7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11000000"

    tools:context="com.example.user.fitnessapp.MenTimer.AbsTimer.Start.AbsStart7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/armbackA7"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back2" />



        <TextView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="140dp"
            android:background="#FFF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_marginLeft="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/plank" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/info"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/infoA7" />

        <TextView
            android:id="@+id/heelstarta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearTimera7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text=""
            android:textColor="#000"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLANK"
            android:layout_marginTop="70dp"/>


        <io.github.krtkush.lineartimer.LinearTimerView
            android:id="@+id/linearTimera7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            timer:initialColor="@color/colorPrimary"
            timer:progressColor="@color/colorInitial"
            timer:radius="25dp"
            timer:startingPoint="270"
            timer:strokeWidth="7dp" />




    </RelativeLayout>

</RelativeLayout>
